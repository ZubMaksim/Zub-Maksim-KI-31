#include <iostream>
#include <thread>

void sumThread() {
    long long sum = 0;
    for (int i = 1; i <= 10; i++) {
        sum += i;
    }
    std::cout << "Child thread (sum 1..10): " << sum << std::endl;
}

int main() {
    std::thread t(sumThread);

    long long product = 1;
    for (int i = 1; i <= 10; i++) {
        product *= i;
    }
    std::cout << "\nParent thread (product 1..10): " << product << std::endl;

    t.join();

    return 0;
}
